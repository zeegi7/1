x1=50
y1=30
x2=50
y2=30
x3=0
y3=2
def setup():
   size(400,400)
def draw():
    background("#FFFCFC")
    fill(x3)
    global x1,y1,x2,y2,x3,y3
    x1 += y1
    ellipse(x2,x1,x3,x3)
    if x1 >= 400:
        y1= -2 
    elif x1 <= 25:
        y1= 2
        
        
    x2 += y2
    if x2 >= 400:
        y2=-2
    elif x2<= 25:
        y2 = 2
        
    x3+= y3
    if x3 >= 255:
        y3 = -2
    elif x3 <= 0:
        y3 = 2 
